            extensions="xsdrules"
            class="org.topcased.checktool.xsdrules.xsdRules.presentation.XsdRulesEditor"
            contributorClass="org.topcased.checktool.xsdrules.xsdRules.presentation.XsdRulesActionBarContributor">
      </editor>
