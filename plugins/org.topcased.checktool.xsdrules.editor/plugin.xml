<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="xsdRules.presentation.XsdRulesModelWizardID"
            name="%_UI_XsdRulesModelWizard_label"
            class="org.topcased.checktool.xsdrules.xsdRules.presentation.XsdRulesModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/XsdRulesModelFile.gif">
